        ConditionPathExists=!/opt/bin/deisctl

        [Service]
        Type=oneshot
        ExecStart=/usr/bin/sh -c 'curl -sSL --retry 5 --retry-delay 2 http://deis.io/deisctl/install.sh | sh -s 1.12.2'
    - name: increase-nf_conntrack-connections.service
      command: start
